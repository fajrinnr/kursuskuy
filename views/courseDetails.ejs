<%- include('./layout/header'); %>


<div class="site-blocks-cover overlay" style="background-image: url(/images/hero_bg_1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5"id="home-section">
    <div class="container">
      <div class="row align-items-center text-center justify-content-center">
        <div class="col-md-8">
          <h1 class="text-uppercase"><%= userCourse.name %></h1>
          <span class="sub-text mb-3 d-block"><em>Course Content</em></span>
          <table class="table crud">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Content</th>
                <th scope="col">Link</th>
              </tr>
            </thead>
            <tbody>
                <% userCourse.CourseContents.forEach((content, index) => { %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= content.content %></td>
                        <td><a href="<%= content.link %>"><%= content.link %></a></td>
                    </tr>

                <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>  

<%- include('./layout/footer'); %>