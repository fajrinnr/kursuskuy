<%- include('./../layout/header'); %>
<%- include('./../frontpage/home'); %>
<div class="site-section" id="pricing-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 text-center">
            <h2 class="font-weight-bold text-black">Edit Course</h2>
                </div>
        </div>
        <div class="col-md-12">
            <form method="POST" action="/course/edit/<%= course.id %>">
                <div class="form-group">
                  <label>Course's Title</label>
                  <input name="name" type="text" class="form-control" placeholder="Enter Course's title" value="<%= course.name %>" >
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input name="price" type="number" min="0" class="form-control" placeholder="Enter Course's price" value="<%= course.price %>">
                </div>  
                <button type="submit" class="btn btn-primary">Save Course & Add Contents</button>
              </form>
        </div>
    </div>
</div>   

<%- include('./../layout/footer'); %>
